.container.pt-90
  .d-flex.justify-content-end.mb-2
    text.import-error.text-danger
  .d-flex.justify-content-between.align-items-center.pb-3
    h3.mb-0 User List
    .d-flex
      = link_to(download_user_list_path(format: :csv) ,class: "primary-button btn post me-3") do
        | Export
        i.fa-solid.fa-download.ms-2
      = form_tag import_user_list_path, multipart: true, id: "importForm" do |form|
        = file_field_tag :file, accept: 'text/csv', class: "form-control d-none", id: "userImportExcel"
        label.primary-button.btn.post.me-3 for="userImportExcel"
          | Import
          i.fa-solid.fa-file-import.ms-2
      = link_to(new_user_path ,class: "primary-button btn post me-0") do
        | Add User
        i.fa-solid.fa-plus.ms-2
  .table-responsive.table-card
    .count-group
        h6.qb-list-title.table-count.mb-0#table_count
    table#example.table.table-bordered.w-100
      thead
        tr
          th Name
          th Email
          th Phone
          th Position
          th width="100px"
      tbody
    - @users.each do |user|
      <!-- Modal -->
      .modal.fade id="deleteModal#{user[:id]}" tabindex="-1" aria-labelledby="deleteModal#{user[:id]}" aria-hidden="true"
        .modal-dialog.modal-dialog-centered
          .modal-content
            .modal-header
              h5.modal-title#exampleModalLabel Delete User
              button.btn-close type="button" data-bs-dismiss="modal" aria-label="Close"
            .modal-body
              | Are You Sure To Delete?
            .modal-footer.button-double
              button.btn.cancel type="button" data-bs-dismiss="modal" Close
              = form_with model: @user, url: user_path(user), method: :delete do |form|
                button.btn.btn-danger type="submit" id="delete-user-btn" Delete
